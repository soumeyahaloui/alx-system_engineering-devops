#!/usr/bin/env bash
# This script configures an Ubuntu server as follows:
# - localhost resolves to 127.0.0.2
# - facebook.com resolves to 8.8.8.8

# Create a temporary hosts file with the desired entries
echo "127.0.0.2 localhost" > ~/hosts.new
echo "8.8.8.8 facebook.com" >> ~/hosts.new

# Replace the original hosts file with the updated one
sudo cp -f ~/hosts.new /etc/hosts

# Clean up the temporary file
rm ~/hosts.new

# Display a message indicating the changes
echo "Configured localhost to 127.0.0.2 and facebook.com to 8.8.8.8"

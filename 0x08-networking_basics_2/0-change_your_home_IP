#!/usr/bin/env bash
# This script configures the Ubuntu server to change the IP address
# resolution for localhost and facebook.com.

# Modify the /etc/hosts file to change localhost resolution
sudo sed -i 's/^127.0.0.1 localhost$/127.0.0.2 localhost/' /etc/hosts

# Modify the /etc/resolv.conf file to change facebook.com resolution
echo "nameserver 8.8.8.8" | sudo tee /etc/resolv.conf

# Flush DNS cache (optional, may require systemd-resolved)
sudo systemctl restart systemd-resolved

# Display a message indicating the configuration change
echo "localhost now resolves to 127.0.0.2"
echo "facebook.com now resolves to 8.8.8.8"

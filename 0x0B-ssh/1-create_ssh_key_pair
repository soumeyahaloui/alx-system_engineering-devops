#!/usr/bin/env bash
# This script generates an RSA key pair with specific requirements.

# Check if the key pair already exists
if [[ -e ~/.ssh/school || -e ~/.ssh/school.pub ]]; then
    echo "Key pair 'school' already exists in ~/.ssh/ directory."
    exit 1
fi

# Generate the RSA key pair with 4096 bits and passphrase
ssh-keygen -t rsa -b 4096 -f ~/.ssh/school -N "betty"

# Check if the key pair was successfully created
if [[ $? -eq 0 ]]; then
    echo "RSA key pair 'school' (4096 bits) with passphrase 'betty' created in ~/.ssh/ directory."
else
    echo "Failed to create RSA key pair."
fi

#!/usr/bin/env bash
# Script to display information about subdomains of a given domain

# Function to get IP address for a subdomain
get_ip_address() {
    dig "$1" +short
}

# Function to display subdomain information
display_subdomain_info() {
    local domain="$1"
    local subdomain="$2"
    local ip_address=$(get_ip_address "$subdomain.$domain")

    if [ -n "$ip_address" ]; then
        echo "The subdomain $subdomain is a $(dig "$subdomain.$domain" +short +type | awk '{print $2}') record and points to $ip_address"
    else
        echo "The subdomain $subdomain does not exist or could not be resolved."
    fi
}

# Main script
if [ "$#" -eq 1 ]; then
    # When only domain parameter is provided, display information for default subdomains
    domain="$1"
    display_subdomain_info "$domain" "www"
    display_subdomain_info "$domain" "lb-01"
    display_subdomain_info "$domain" "web-01"
    display_subdomain_info "$domain" "web-02"
elif [ "$#" -eq 2 ]; then
    # When domain and subdomain parameters are provided, display information for the specified subdomain
    domain="$1"
    subdomain="$2"
    display_subdomain_info "$domain" "$subdomain"
else
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

#!/bin/bash

# Function to display information about a subdomain
display_info() {
    local domain="$1"
    local subdomain="$2"
    
    # Resolve the subdomain and get the record type and destination
    local result=$(nslookup "${subdomain}.${domain}" | awk '
        BEGIN { found = 0; record_type = ""; destination = "" }
        /^Name:/ { found = 1; }
        /^Server:/ { found = 0; }
        /Address:/ { if (found) destination = $2; }
        /^[[:alnum:]]/ { if (found) record_type = $1; }
        END { if (record_type != "") print "The subdomain", "'"$subdomain"'", "is a", record_type, "record and points to", destination; }
    ')
    
    if [ -n "$result" ]; then
        echo "$result"
    else
        echo "Subdomain not found: $subdomain"
    fi
}

domain="$1"
subdomain="$2"

if [ -z "$domain" ]; then
    echo "Please provide the domain name as the first argument."
    exit 1
fi

if [ -z "$subdomain" ]; then
    # Display information for default subdomains
    display_info "$domain" "www"
    display_info "$domain" "lb-01"
    display_info "$domain" "web-01"
    display_info "$domain" "web-02"
else
    # Display information for the specified subdomain
    display_info "$domain" "$subdomain"
fi
